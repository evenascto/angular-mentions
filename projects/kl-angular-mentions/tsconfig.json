{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
	// "enableIvy" : false,
	"target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
	"lib": [ "es6", "dom" ],
    "paths": {
      "kl-angular-mentions": [
        "dist/kl-angular-mentions"
      ],
      "angular-mentions/*": [
        "dist/kl-angular-mentions/*"
      ],
      "mention": [
        "dist/mention"
      ],
      "mention/*": [
        "dist/mention/*"
      ]
    }
  }
}